
<div class="gallery">
{{#each works}}<div class="painting"><p><a href="/singlework/{{this._doc._id}}"><img src="{{this.image}}" height="180" width="250"></a><br><b>{{this.title}}</b><br>{{this.artist.name}}<br><small><i><a href="/collection/{{this._doc.theme}}">{{this.theme}}</a></i></small></p>
</div>{{/each}}</div>
<div class="addwork">
<h3>Add a new work</h3>
    <form action="/artistloggedin" method="post">
  <label for="">Title:</label>
  <input type="text" name="title"><br>
    <label for="">Description:</label>
  <input type="text" name="description"><br>
    <label for="">Theme:</label>
  <input type="text" name="theme"><br>
    <label for="">Image URL:</label>
  <input type="text" name="image"><br>
    <button type="submit">Submit</button>
</form>
</div>
